<div>
    <section>
        <h2>Create a new post!</h2>
        <form class="new-post-form">
            <div>
                <label for="post-title">Title</label>
                <input type="text" id="post-title" name="post-title" />
            </div>
            <div>
                <label for="post-body">Body</label>
                <input type="text" id="post-body" name="post-body" />
            </div>
            <button type="submit">Create!</button>
        </form>
    </section>
</div>
{{#if posts.length}}
<div class="container">
    <section>
        <h2>Your Posts:</h2>
        <ol>
            {{#each posts as |post|}}
            <li>
                {{> post-info post}}
                <a href="/dashboard/edit/{{post.id}}">Edit Post</a>
            </li>
            {{/each}}
        </ol>
    </section>
</div>
{{/if}}

<script src="/javascript/create-post.js"></script>